<DefaultWindow xmlns="https://spacestation14.io"
               Title="{Loc nano-chat-emoji-picker}"
               MinSize="300 400">
    <PanelContainer StyleClasses="AngleRect">
        <BoxContainer Orientation="Vertical" Margin="4">
            <!-- Search box -->
            <LineEdit Name="SearchInput"
                      PlaceHolder="{Loc nano-chat-emoji-search}"
                      HorizontalExpand="True"
                      Margin="0 0 0 4" />

            <!-- Emoji grid -->
            <ScrollContainer VerticalExpand="True"
                             HorizontalExpand="True"
                             Margin="0 4"
                             HScroll="0"
                             VScroll="1">
                <GridContainer Name="EmojiGrid"
                               Columns="6"
                               HorizontalExpand="True" />
            </ScrollContainer>

            <!-- Close button -->
            <BoxContainer Orientation="Horizontal"
                          HorizontalAlignment="Right"
                          Margin="0 8 0 0">
                <Button Name="EmojiCloseButton"
                        Text="{Loc nano-chat-close}"
                        MinSize="80 0" />
            </BoxContainer>
        </BoxContainer>
    </PanelContainer>
</DefaultWindow>
