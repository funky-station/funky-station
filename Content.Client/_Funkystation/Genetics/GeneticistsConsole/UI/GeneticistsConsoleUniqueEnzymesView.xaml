<Control xmlns="https://spacestation14.io"
         xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
         xmlns:ui="clr-namespace:Content.Client._Funkystation.Genetics.GeneticistsConsole.UI"
         xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client">

    <BoxContainer Orientation="Vertical">

        <BoxContainer Orientation="Horizontal" VerticalExpand="True" HorizontalExpand="True">

            <!-- Left - Subject mutations list -->
            <BoxContainer Orientation="Vertical">
                <Label Text="{Loc 'dna-scanner-sequences'}" />
                <PanelContainer StyleClasses="LowDivider"/>
                <PanelContainer MinSize="176 0" VerticalExpand="True" >
                    <PanelContainer.PanelOverride>
                        <gfx:StyleBoxFlat BackgroundColor="#202025" />
                    </PanelContainer.PanelOverride>
                    <ScrollContainer>
                        <BoxContainer Orientation="Vertical" Margin="8" HorizontalAlignment="Center" >
                            <Label Name="NoSequencesLabel" Text="{Loc 'dna-scanner-no-sequences'}" StyleClasses="LabelSubText" Margin="0 10" Access="Public" />
                            <GridContainer Name="SequencesContainer" Columns="2" HorizontalExpand="True" />
                        </BoxContainer>
                    </ScrollContainer>
                </PanelContainer>
            </BoxContainer>

            <!-- Right side - Info + buttons + sequencer -->
            <BoxContainer Orientation="Vertical" HorizontalExpand="True" Margin="20 0 0 0">
                <Label Text="{Loc 'dna-scanner-sequence-info'}" />
                <PanelContainer StyleClasses="LowDivider" Margin="0 0 0 0"/>
                <!-- Info panel -->
                <PanelContainer VerticalExpand="True">
                    <PanelContainer.PanelOverride>
                        <gfx:StyleBoxFlat BackgroundColor="#1B1B1E" />
                    </PanelContainer.PanelOverride>
                    <ScrollContainer Name="InfoContainer" HScrollEnabled="False" VerticalExpand="True">
                        <BoxContainer Orientation="Vertical" Margin="10 10 10 10">
                            <BoxContainer Orientation="Horizontal" Margin="0 0 0 4">
                                <Label Text="{Loc 'dna-scanner-info-name'}" MinWidth="94" VerticalAlignment="Top" Margin="0 0 10 0"/>
                                <RichTextLabel Name="InfoNameLabel" Text="" Access="Public" />
                            </BoxContainer>
                            <BoxContainer Orientation="Horizontal" Margin="0 0 0 4">
                                <Label Text="{Loc 'dna-scanner-info-description'}" MinWidth="94" VerticalAlignment="Top" Margin="0 0 10 0"/>
                                <RichTextLabel Name="InfoDescLabel" Text="" Access="Public" />
                            </BoxContainer>
                            <BoxContainer Orientation="Horizontal" Margin="0 0 0 4">
                                <Label Text="{Loc 'dna-scanner-info-instability'}" MinWidth="94" VerticalAlignment="Top" Margin="0 0 10 0"/>
                                <RichTextLabel Name="InfoInstabilityLabel" Text="" Access="Public" />
                            </BoxContainer>
                            <BoxContainer Orientation="Horizontal" Margin="0 0 0 4">
                                <Label Text="{Loc 'dna-scanner-info-research'}" MinWidth="94" VerticalAlignment="Top" Margin="0 0 10 0"/>
                                <RichTextLabel Name="InfoResearchLabel" Text="" Access="Public" />
                            </BoxContainer>
                            <BoxContainer Name="ConflictsLabelContainer" Orientation="Horizontal" Visible="False" Margin="0 0 0 4">
                                <Label Text="{Loc 'dna-scanner-info-conflicts'}" MinWidth="94" VerticalAlignment="Top" Margin="0 0 10 0"/>
                                <RichTextLabel Name="ConflictsLabel" Text="" Access="Public" />
                            </BoxContainer>

                            <Control VerticalExpand="True" />
                        </BoxContainer>

                    </ScrollContainer>
                </PanelContainer>

                <BoxContainer Orientation="Horizontal" Margin="0 12 0 0">
                    <Button Name="PrintActivatorButton" Text="{Loc 'dna-scanner-print-activator'}" Disabled="True" HorizontalExpand="True" Margin="0 0 2 0" Access="Public"/>
                    <Button Name="PrintMutatorButton"   Text="{Loc 'dna-scanner-print-mutator'}"   Disabled="True" HorizontalExpand="True" Margin="2 0 0 0" Access="Public"/>
                </BoxContainer>

                <Button Name="SaveMutationButton" Text="{Loc 'dna-scanner-save-mutation'}" Disabled="True" HorizontalExpand="True" Margin="0 8 0 0" Access="Public"/>
                <Button Name="ResearchMutationButton" Text="{Loc 'dna-scanner-research-mutation'}" Disabled="True" HorizontalExpand="True" Margin="0 8 0 0" Access="Public"/>
            </BoxContainer>

        </BoxContainer>

        <!-- Sequencer -->
        <BoxContainer Name="SequencerPanel" Orientation="Vertical" MinHeight="140" Margin="0 20 0 0">
            <BoxContainer Orientation="Horizontal">
                <Label Text="{Loc 'dna-scanner-sequencer-title'}"/>
                <Control HorizontalExpand="True"/>
                <Button Name="ClearBaseButton" Text="{Loc 'dna-scanner-sequencer-clear'}" MinSize="120 0" Margin="4 0 0 1" Access="Public"/>
                <Button Name="JokerButton"     Text="{Loc 'dna-scanner-sequencer-joker'}" MinSize="120 0" Margin="4 0 0 1" Access="Public"/>
            </BoxContainer>

            <PanelContainer StyleClasses="LowDivider" Margin="0 0 0 10"/>

            <BoxContainer Name="SequencerContainer" Orientation="Horizontal" HorizontalAlignment="Center">

                <!-- Column 1 -->
                <PanelContainer>
                    <PanelContainer.PanelOverride>
                        <gfx:StyleBoxFlat BorderColor="#50AAFF" BorderThickness="1" />
                    </PanelContainer.PanelOverride>
                    <BoxContainer Orientation="Horizontal" HorizontalExpand="True" Margin="4 4 4 4">
                        <BoxContainer Orientation="Vertical" Margin="0 0 0 4" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ui:SequencerButton Name="Seq_1"  Text="X" MinWidth="42" Margin="0 0 4 0" />
                            <Label Text="|" Margin="16 0 0 0"/>
                            <ui:SequencerButton Name="Seq_2" Text="X" MinWidth="42" Margin="0 0 4 0" />
                        </BoxContainer>
                        <BoxContainer Orientation="Vertical" Margin="0 0 0 4">
                            <ui:SequencerButton Name="Seq_3"  Text="X" MinWidth="42" Margin="0 0 4 0" />
                            <Label Text="|" Margin="16 0 0 0"/>
                            <ui:SequencerButton Name="Seq_4" Text="X" MinWidth="42" Margin="0 0 4 0" />
                        </BoxContainer>
                        <BoxContainer Orientation="Vertical" Margin="0 0 0 4">
                            <ui:SequencerButton Name="Seq_5"  Text="X" MinWidth="42" Margin="0 0 4 0" />
                            <Label Text="|" Margin="16 0 0 0"/>
                            <ui:SequencerButton Name="Seq_6" Text="X" MinWidth="42" Margin="0 0 4 0" />
                        </BoxContainer>
                        <BoxContainer Orientation="Vertical">
                            <ui:SequencerButton Name="Seq_7"  Text="X" MinWidth="42" Margin="0 0 4 0" />
                            <Label Text="|" Margin="16 0 0 0"/>
                            <ui:SequencerButton Name="Seq_8" Text="X" MinWidth="42" Margin="0 0 4 0" />
                        </BoxContainer>
                    </BoxContainer>
                </PanelContainer>

                <!-- Column 2 -->
                <PanelContainer Margin="4 0 2 0" >
                    <PanelContainer.PanelOverride>
                        <gfx:StyleBoxFlat BorderColor="#50AAFF" BorderThickness="1" />
                    </PanelContainer.PanelOverride>
                <BoxContainer Orientation="Horizontal" HorizontalExpand="True" Margin="4 4 4 4">
                    <BoxContainer Orientation="Vertical" Margin="0 0 0 4">
                        <ui:SequencerButton Name="Seq_9"  Text="X" MinWidth="42" Margin="0 0 4 0" />
                        <Label Text="|" Margin="16 0 0 0"/>
                        <ui:SequencerButton Name="Seq_10" Text="X" MinWidth="42" Margin="0 0 4 0" />
                    </BoxContainer>
                    <BoxContainer Orientation="Vertical" Margin="0 0 0 4">
                        <ui:SequencerButton Name="Seq_11"  Text="X" MinWidth="42" Margin="0 0 4 0" />
                        <Label Text="|" Margin="16 0 0 0"/>
                        <ui:SequencerButton Name="Seq_12" Text="X" MinWidth="42" Margin="0 0 4 0" />
                    </BoxContainer>
                    <BoxContainer Orientation="Vertical" Margin="0 0 0 4">
                        <ui:SequencerButton Name="Seq_13"  Text="X" MinWidth="42" Margin="0 0 4 0" />
                        <Label Text="|" Margin="16 0 0 0"/>
                        <ui:SequencerButton Name="Seq_14" Text="X" MinWidth="42" Margin="0 0 4 0" />
                    </BoxContainer>
                    <BoxContainer Orientation="Vertical">
                        <ui:SequencerButton Name="Seq_15"  Text="X" MinWidth="42" Margin="0 0 4 0" />
                        <Label Text="|" Margin="16 0 0 0"/>
                        <ui:SequencerButton Name="Seq_16" Text="X" MinWidth="42" Margin="0 0 4 0" />
                    </BoxContainer>
                </BoxContainer>
                </PanelContainer>

                <!-- Column 3 -->
                <PanelContainer Margin="2 0 4 0" >
                    <PanelContainer.PanelOverride>
                        <gfx:StyleBoxFlat BorderColor="#50AAFF" BorderThickness="1" />
                    </PanelContainer.PanelOverride>
                <BoxContainer Orientation="Horizontal" HorizontalExpand="True" Margin="4 4 4 4">
                    <BoxContainer Orientation="Vertical" Margin="0 0 0 4">
                        <ui:SequencerButton Name="Seq_17"  Text="X" MinWidth="42" Margin="0 0 4 0" />
                        <Label Text="|" Margin="16 0 0 0"/>
                        <ui:SequencerButton Name="Seq_18" Text="X" MinWidth="42" Margin="0 0 4 0" />
                    </BoxContainer>
                    <BoxContainer Orientation="Vertical" Margin="0 0 0 4">
                        <ui:SequencerButton Name="Seq_19"  Text="X" MinWidth="42" Margin="0 0 4 0" />
                        <Label Text="|" Margin="16 0 0 0"/>
                        <ui:SequencerButton Name="Seq_20" Text="X" MinWidth="42" Margin="0 0 4 0" />
                    </BoxContainer>
                    <BoxContainer Orientation="Vertical" Margin="0 0 0 4">
                        <ui:SequencerButton Name="Seq_21"  Text="X" MinWidth="42" Margin="0 0 4 0" />
                        <Label Text="|" Margin="16 0 0 0"/>
                        <ui:SequencerButton Name="Seq_22" Text="X" MinWidth="42" Margin="0 0 4 0" />
                    </BoxContainer>
                    <BoxContainer Orientation="Vertical">
                        <ui:SequencerButton Name="Seq_23"  Text="X" MinWidth="42" Margin="0 0 4 0" />
                        <Label Text="|" Margin="16 0 0 0"/>
                        <ui:SequencerButton Name="Seq_24" Text="X" MinWidth="42" Margin="0 0 4 0" />
                    </BoxContainer>
                </BoxContainer>
                </PanelContainer>

                <!-- Column 4 -->
                <PanelContainer>
                    <PanelContainer.PanelOverride>
                        <gfx:StyleBoxFlat BorderColor="#50AAFF" BorderThickness="1" />
                    </PanelContainer.PanelOverride>
                <BoxContainer Orientation="Horizontal" HorizontalExpand="True" Margin="4 4 4 4">
                    <BoxContainer Orientation="Vertical" Margin="0 0 0 4">
                        <ui:SequencerButton Name="Seq_25"  Text="X" MinWidth="42" Margin="0 0 4 0" />
                        <Label Text="|" Margin="16 0 0 0"/>
                        <ui:SequencerButton Name="Seq_26"  Text="X" MinWidth="42" Margin="0 0 4 0" />
                    </BoxContainer>
                    <BoxContainer Orientation="Vertical" Margin="0 0 0 4">
                        <ui:SequencerButton Name="Seq_27"  Text="X" MinWidth="42" Margin="0 0 4 0" />
                        <Label Text="|" Margin="16 0 0 0"/>
                        <ui:SequencerButton Name="Seq_28" Text="X" MinWidth="42" Margin="0 0 4 0" />
                    </BoxContainer>
                    <BoxContainer Orientation="Vertical" Margin="0 0 0 4">
                        <ui:SequencerButton Name="Seq_29"  Text="X" MinWidth="42" Margin="0 0 4 0" />
                        <Label Text="|" Margin="16 0 0 0"/>
                        <ui:SequencerButton Name="Seq_30" Text="X" MinWidth="42" Margin="0 0 4 0" />
                    </BoxContainer>
                    <BoxContainer Orientation="Vertical">
                        <ui:SequencerButton Name="Seq_31"  Text="X" MinWidth="42" Margin="0 0 4 0" />
                        <Label Text="|" Margin="16 0 0 0"/>
                        <ui:SequencerButton Name="Seq_32" Text="X" MinWidth="42" Margin="0 0 4 0" />
                    </BoxContainer>
                </BoxContainer>
                </PanelContainer>

            </BoxContainer>
        </BoxContainer>

    </BoxContainer>

</Control>
