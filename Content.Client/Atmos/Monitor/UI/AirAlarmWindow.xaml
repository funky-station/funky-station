<ui:FancyWindow xmlns="https://spacestation14.io"
                xmlns:x="http://schemas.microsoft.com/winfx/2007/xaml"
                xmlns:ui="clr-namespace:Content.Client.UserInterface.Controls"
                xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                MinSize="650 550" Resizable="True" Title="Air Alarm">
    <BoxContainer Orientation="Vertical" Margin="0">
        <!-- Header -->
        <PanelContainer HorizontalExpand="True" StyleClasses="PanelDark" Margin="0 0 0 2">
            <BoxContainer Orientation="Horizontal" Margin="5,5">
                <!-- Left column (view of entity) -->
                <PanelContainer Margin="2 0 6 0" StyleClasses="Inset" VerticalAlignment="Center"
                                VerticalExpand="True">
                    <SpriteView Name="EntityView" OverrideDirection="South" Scale="2 2" SetSize="64 64" />
                </PanelContainer>
                <BoxContainer Name="HeaderPanelHolder" Orientation="Vertical" HorizontalExpand="True">
                    <!-- Status (pressure, temperature, alarm state, device total, address, etc) -->
                    <BoxContainer Orientation="Horizontal" Margin="0 5 0 5">

                        <!-- Center column (pressure, temperature, alarm state) -->
                        <PanelContainer HorizontalExpand="True" StyleClasses="PanelLight"
                                        SizeFlagsStretchRatio="5">
                            <BoxContainer Orientation="Horizontal" HorizontalExpand="True" Margin="5">
                                <BoxContainer Orientation="Vertical" Margin="0 0 0 0" HorizontalExpand="True">
                                    <Label Text="{Loc 'air-alarm-ui-window-pressure-label'}" StyleClasses="highlight" />
                                    <Label Text="{Loc 'air-alarm-ui-window-temperature-label'}"
                                           StyleClasses="highlight" />
                                    <Label Text="{Loc 'air-alarm-ui-window-alarm-state-label'}"
                                           StyleClasses="highlight" />
                                </BoxContainer>
                                <BoxContainer Orientation="Vertical" HorizontalExpand="True"
                                              HorizontalAlignment="Right">
                                    <RichTextLabel Name="CPressureLabel" HorizontalAlignment="Right" />
                                    <RichTextLabel Name="CTemperatureLabel" HorizontalAlignment="Right" />
                                    <RichTextLabel Name="CStatusLabel" HorizontalAlignment="Right" />
                                </BoxContainer>
                            </BoxContainer>
                        </PanelContainer>
                        <!-- Center column (pressure, temperature, alarm state) -->

                        <ui:VSpacer SetWidth="5" HorizontalExpand="True" SizeFlagsStretchRatio="0.25"></ui:VSpacer>

                        <!-- Right column (address, device total) -->
                        <PanelContainer HorizontalExpand="True" StyleClasses="PanelLight"
                                        SizeFlagsStretchRatio="1">
                            <BoxContainer Orientation="Vertical" HorizontalExpand="True" SizeFlagsStretchRatio="0.05"
                                          Margin="5" VerticalAlignment="Center">
                                <BoxContainer Orientation="Horizontal" Margin="0 0 0 0" HorizontalExpand="True">
                                    <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                                        <Label Text="{Loc 'air-alarm-ui-window-address-label'}"
                                               StyleClasses="highlight" />
                                        <Label Text="{Loc 'air-alarm-ui-window-device-count-label'}"
                                               StyleClasses="highlight" />
                                    </BoxContainer>
                                    <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                                        <RichTextLabel Name="CDeviceAddress" HorizontalAlignment="Right" />
                                        <RichTextLabel Name="CDeviceTotal" HorizontalAlignment="Right" />
                                    </BoxContainer>
                                </BoxContainer>
                            </BoxContainer>
                        </PanelContainer>
                        <!-- Right column (address, device total) -->


                    </BoxContainer>
                    <!-- Mode buttons -->
                    <BoxContainer Orientation="Horizontal">
                        <Label Text="{Loc 'air-alarm-ui-window-mode-label'}" Margin="0 0 2 0"
                               HorizontalAlignment="Center"
                               HorizontalExpand="True" SizeFlagsStretchRatio="0.25" />
                        <Control HorizontalExpand="True">
                            <OptionButton Name="CModeButton" />
                            <ui:StripeBack Name="CModeSelectLocked">
                                <RichTextLabel Text="{Loc 'air-alarm-ui-window-mode-select-locked-label'}"
                                               HorizontalAlignment="Center" />
                            </ui:StripeBack>
                        </Control>
                        <CheckBox Name="AutoModeCheckBox" Text="{Loc 'air-alarm-ui-window-auto-mode-label'}"
                                  HorizontalExpand="True" SizeFlagsStretchRatio="0.75" HorizontalAlignment="Center" />

                        <ui:VSpacer SetWidth="5" HorizontalExpand="True" SizeFlagsStretchRatio="0.1"></ui:VSpacer>

                        <Button Name="CResyncButton" Text="{Loc 'air-alarm-ui-window-resync-devices-label'}"
                                HorizontalExpand="True" SizeFlagsStretchRatio="0.1" />
                    </BoxContainer>
                </BoxContainer>
            </BoxContainer>
        </PanelContainer>
        <!-- Gas/Device Data -->
        <TabContainer Name="CTabContainer" VerticalExpand="True" Margin="7 3 7 5">
            <!-- Vent devices -->
            <PanelContainer VerticalExpand="True">
                <PanelContainer.PanelOverride>
                    <gfx:StyleBoxFlat BackgroundColor="#1B1B1E" />
                </PanelContainer.PanelOverride>

                <ScrollContainer>
                    <BoxContainer Name="CVentContainer" Orientation="Vertical" />
                </ScrollContainer>
            </PanelContainer>
            <!-- Scrubber devices -->
            <PanelContainer VerticalExpand="True">
                <PanelContainer.PanelOverride>
                    <gfx:StyleBoxFlat BackgroundColor="#1B1B1E" />
                </PanelContainer.PanelOverride>

                <ScrollContainer>
                    <BoxContainer Name="CScrubberContainer" Orientation="Vertical" />
                </ScrollContainer>
            </PanelContainer>
            <!-- Sensors -->
            <PanelContainer VerticalExpand="True">
                <PanelContainer.PanelOverride>
                    <gfx:StyleBoxFlat BackgroundColor="#1B1B1E" />
                </PanelContainer.PanelOverride>

                <ScrollContainer>
                    <BoxContainer Name="CSensorContainer" Orientation="Vertical" />
                </ScrollContainer>
            </PanelContainer>
        </TabContainer>

        <!-- Footer -->
        <BoxContainer Orientation="Vertical">
            <PanelContainer StyleClasses="LowDivider" />
            <BoxContainer Orientation="Horizontal" Margin="10 2 5 0" VerticalAlignment="Bottom">
                <Label Text="{Loc 'air-alarm-flavor-left'}" StyleClasses="WindowFooterText" />
                <Label Text="{Loc 'air-alarm-flavor-right'}" StyleClasses="WindowFooterText"
                       HorizontalAlignment="Right" HorizontalExpand="True" Margin="0 0 5 0" />
                <TextureRect StyleClasses="NTLogoDark" Stretch="KeepAspectCentered"
                             VerticalAlignment="Center" HorizontalAlignment="Right" SetSize="19 19" />
            </BoxContainer>
        </BoxContainer>
    </BoxContainer>
</ui:FancyWindow>
