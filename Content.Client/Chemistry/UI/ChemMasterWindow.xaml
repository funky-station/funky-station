<controls:FancyWindow
    MinSize="800 00"
    Title="{Loc 'chem-master-bound-user-interface-title'}"
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <BoxContainer
        MinSize="0 200"
        Orientation="Horizontal"
        VerticalExpand="true">
        <TabContainer
            HorizontalExpand="True"
            Margin="5,5,7,5"
            Name="Tabs">
            <BoxContainer
                HorizontalExpand="True"
                Margin="5"
                Orientation="Vertical"
                SeparationOverride="10">
                <!--  Buffer  -->
                <BoxContainer Orientation="Horizontal">
                    <Label Text="{Loc 'chem-master-window-buffer-text'}" />
                    <Control HorizontalExpand="True" />
                    <Button
                        Access="Public"
                        MinSize="80 0"
                        Name="BufferTransferButton"
                        StyleClasses="OpenRight"
                        Text="{Loc 'chem-master-window-transfer-button'}"
                        ToggleMode="True" />
                    <OptionButton
                        Access="Public"
                        Name="SortMethod"
                        StyleClasses="OpenBoth"
                        ToolTip="{Loc 'chem-master-window-sort-method-tooltip'}" />
                    <Button
                        Access="Public"
                        MinSize="80 0"
                        Name="BufferDiscardButton"
                        StyleClasses="OpenLeft"
                        Text="{Loc 'chem-master-window-discard-button'}"
                        ToggleMode="True" />
                </BoxContainer>

                <!--  Buffer info  -->
                <PanelContainer
                    HorizontalExpand="True"
                    MinSize="0 300"
                    VerticalExpand="True">
                    <PanelContainer.PanelOverride>
                        <gfx:StyleBoxFlat BackgroundColor="#1B1B1E" />
                    </PanelContainer.PanelOverride>

                    <ScrollContainer HorizontalExpand="True" MinSize="0 300">
                        <!--  Buffer reagent list  -->
                        <BoxContainer
                            HorizontalExpand="True"
                            Margin="4"
                            Name="BufferInfo"
                            Orientation="Vertical">
                            <Label Text="{Loc 'chem-master-window-buffer-empty-text'}" />
                        </BoxContainer>
                    </ScrollContainer>
                </PanelContainer>
            </BoxContainer>

            <BoxContainer
                HorizontalExpand="True"
                Margin="5"
                Orientation="Vertical"
                SeparationOverride="10">
                <!--  Pill Buffer  -->
                <BoxContainer Orientation="Horizontal">
                    <Label Text="{Loc 'chem-master-window-pill-buffer-text'}" />
                    <Control HorizontalExpand="True" />
                    <Button
                        Access="Public"
                        MinSize="80 0"
                        Name="PillBufferTransferButton"
                        StyleClasses="OpenRight"
                        Text="{Loc 'chem-master-window-transfer-button'}"
                        ToggleMode="True" />
                    <OptionButton
                        Access="Public"
                        Name="PillSortMethod"
                        StyleClasses="OpenBoth"
                        ToolTip="{Loc 'chem-master-window-sort-method-tooltip'}" />
                    <Button
                        Access="Public"
                        MinSize="80 0"
                        Name="PillBufferDiscardButton"
                        StyleClasses="OpenLeft"
                        Text="{Loc 'chem-master-window-discard-button'}"
                        ToggleMode="True" />
                </BoxContainer>

                <!--  Pill Buffer info  -->
                <PanelContainer
                    HorizontalExpand="True"
                    MinSize="0 300"
                    VerticalExpand="True">
                    <PanelContainer.PanelOverride>
                        <gfx:StyleBoxFlat BackgroundColor="#1B1B1E" />
                    </PanelContainer.PanelOverride>

                    <ScrollContainer HorizontalExpand="True" MinSize="0 300">
                        <!--  Pill Buffer reagent list  -->
                        <BoxContainer
                            HorizontalExpand="True"
                            Margin="4"
                            Name="PillBufferInfo"
                            Orientation="Vertical">
                            <Label Text="{Loc 'chem-master-window-pill-buffer-empty-text'}" />
                        </BoxContainer>
                    </ScrollContainer>
                </PanelContainer>

                <!--  Padding  -->
                <Control MinSize="0 10" />

                <!--  Packaging  -->
                <BoxContainer Orientation="Horizontal">
                    <Label Text="{Loc 'chem-master-window-packaging-text'}" />
                    <Control HorizontalExpand="True" />
                    <Label Text="{Loc 'chem-master-window-buffer-label'}" />
                    <Label Name="BufferCurrentVolume" StyleClasses="LabelWeak" />
                </BoxContainer>

                <!--  Wrap the packaging info  -->
                <PanelContainer>
                    <PanelContainer.PanelOverride>
                        <gfx:StyleBoxFlat BackgroundColor="#1B1B1E" />
                    </PanelContainer.PanelOverride>

                    <!--  Packaging Info  -->
                    <BoxContainer
                        HorizontalExpand="True"
                        Margin="4"
                        Orientation="Vertical"
                        SeparationOverride="5"
                        VerticalExpand="True">
                        <!--  Label for output  -->
                        <BoxContainer Orientation="Horizontal">
                            <Label Text="{Loc 'chem-master-current-text-label'}" />
                            <Control HorizontalExpand="True" MinSize="50 0" />
                            <LineEdit Name="LabelLineEdit" SetWidth="455" />
                        </BoxContainer>

                        <!--  Pills Type Buttons  -->
                        <BoxContainer Orientation="Horizontal">
                            <Label Text="{Loc 'chem-master-window-pill-type-label'}" />
                            <Control HorizontalExpand="True" MinSize="50 0" />
                            <GridContainer Columns="10" Name="Grid">
                                <!--  Pills type buttons are generated in the code  -->
                            </GridContainer>
                        </BoxContainer>

                        <BoxContainer Orientation="Horizontal">
                            <Label Text="{Loc 'chem-master-window-pills-label'}" />
                            <Control HorizontalExpand="True" MinSize="50 0" />
                            <Label
                                Margin="5,0,0,0"
                                StyleClasses="LabelWeak"
                                Text="{Loc 'chem-master-window-number-label'}" />
                            <SpinBox
                                Access="Public"
                                MinSize="100 0"
                                Name="PillNumber"
                                Value="0" />
                            <Label
                                Margin="5,0,0,0"
                                StyleClasses="LabelWeak"
                                Text="{Loc 'chem-master-window-dose-label'}" />
                            <SpinBox
                                Access="Public"
                                MinSize="100 0"
                                Name="PillDosage"
                                Value="1" />
                            <Button
                                Access="Public"
                                MinSize="80 0"
                                Name="CreatePillButton"
                                Text="{Loc 'chem-master-window-create-button'}" />
                        </BoxContainer>

                        <BoxContainer Orientation="Horizontal">
                            <Label Text="{Loc 'chem-master-window-bottles-label'}" />
                            <Control HorizontalExpand="True" MinSize="50 0" />
                            <Label
                                Margin="5,0,0,0"
                                StyleClasses="LabelWeak"
                                Text="{Loc 'chem-master-window-number-label'}" />
                            <SpinBox
                                Access="Public"
                                MinSize="100 0"
                                Name="BottleNumber"
                                Value="0" />
                            <Label
                                Margin="5,0,0,0"
                                StyleClasses="LabelWeak"
                                Text="{Loc 'chem-master-window-dose-label'}" />
                            <SpinBox
                                Access="Public"
                                MinSize="100 0"
                                Name="BottleDosage"
                                Value="0" />
                            <Button
                                Access="Public"
                                MinSize="80 0"
                                Name="CreateBottleButton"
                                Text="{Loc 'chem-master-window-create-button'}" />
                        </BoxContainer>
                    </BoxContainer>
                </PanelContainer>
            </BoxContainer>
        </TabContainer>
        <BoxContainer
            Margin="5,5,7,5"
            MinSize="300 0"
            Orientation="Vertical">
            <!--  Input container info  -->
            <BoxContainer Orientation="Horizontal">
                <Label Text="{Loc 'chem-master-window-container-label'}" />
                <Control HorizontalExpand="True" />
                <Button
                    Access="Public"
                    MinSize="80 0"
                    Name="InputEjectButton"
                    StyleClasses="OpenLeft"
                    Text="{Loc 'chem-master-window-eject-button'}" />
            </BoxContainer>
            <!--  Padding  -->
            <Control MinSize="0 5" />

            <PanelContainer
                HorizontalExpand="True"
                MinSize="0 300"
                VerticalExpand="True">
                <PanelContainer.PanelOverride>
                    <gfx:StyleBoxFlat BackgroundColor="#1B1B1E" />
                </PanelContainer.PanelOverride>

                <BoxContainer>
                    <ScrollContainer HorizontalExpand="True" MinSize="0 20">
                        <!--  Initially empty, when server sends state data this will have container contents and fill volume.  -->
                        <BoxContainer
                            HorizontalExpand="True"
                            Margin="4"
                            Name="ContainerInfoContainer"
                            Orientation="Vertical">
                            <Label Text="{Loc 'chem-master-window-no-container-loaded-text'}" />
                        </BoxContainer>
                    </ScrollContainer>
                </BoxContainer>
            </PanelContainer>
            <RichTextLabel
                Margin="0,0,7,0"
                Name="AmountLabel"
                Text="{Loc 'chem-master-window-transferring-default-label'}" />
            <LineEdit
                Access="Public"
                MinSize="140 0"
                Name="AmountLineEdit"
                PlaceHolder="{Loc 'chem-master-window-amount-placeholder'}" />
            <BoxContainer HorizontalExpand="True" Orientation="Horizontal">
                <Button
                    HorizontalExpand="True"
                    Name="SetAmountButton"
                    StyleClasses="OpenRight"
                    Text="{Loc 'chem-master-window-set-amount-label'}" />
                <Button
                    HorizontalExpand="True"
                    Name="SaveAsFrequentButton"
                    StyleClasses="OpenLeft"
                    Text="{Loc 'chem-master-window-save-as-frequent-label'}" />
            </BoxContainer>
            <RichTextLabel Text="Both of the above buttons use the textbox" />
            <Control MinSize="0 5" />
            <GridContainer
                Columns="4"
                HorizontalExpand="True"
                Margin="2,2,2,2"
                Name="AmountButtons"
                VerticalExpand="True" />
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
