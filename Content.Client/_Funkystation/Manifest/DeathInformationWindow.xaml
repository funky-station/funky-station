<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      Title="{Loc 'death-info-window-title'}"
                      MinSize="100 250"
                      SetSize="550 370">
    <BoxContainer Orientation="Vertical" Margin="10 10 20 0">
        <Label HorizontalAlignment="Center" Text="{Loc 'death-info-window-explain'}" />
        <TextEdit Name="DeathInformationWindowTextEdit" MaxHeight="500" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MinHeight="50" />
        <Label Name="CharacterLimitLabel" HorizontalAlignment="Center" StyleClasses="LabelSmall"/>
        <Label HorizontalAlignment="Center" Text="{Loc 'death-info-window-explain-edit'}" />
        <controls:ConfirmButton Name="SubmitButton" ConfirmationText="{Loc 'death-info-window-submit-button-text-confirm'}" Text="{Loc 'death-info-window-submit-button-text'}" Margin="0 10 0 10" />
    </BoxContainer>
</controls:FancyWindow>
