<controls:FancyWindow xmlns="https://spacestation14.io"
               xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
               Title="{Loc 'cult-commune-window'}"
               MinSize="5 30">
    <BoxContainer Orientation="Vertical" Margin="5">
        <Label Text="{Loc 'cult-commune-info'}" />
        <BoxContainer Orientation="Horizontal" Margin="5">
            <LineEdit Name="CommuneMessage" HorizontalExpand="True" />
            <Button Name="CommuneMessageSend" Text="{Loc 'cult-commune-send'}" />
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
