<PanelContainer xmlns="https://spacestation14.io"
                StyleClasses="BackgroundPanel"
                HorizontalExpand="True"
                Margin="0 0 0 6"
                Access="Public">

    <BoxContainer Orientation="Vertical"
                  Margin="8">

        <!-- Top line: Gas name + cost -->
        <BoxContainer Orientation="Horizontal"
                      Margin="0 0 4 0">
            <Label Name="GasNameLabel"
                   Text="Gas Name"
                   Margin="0 0 4 0"
                   VerticalAlignment="Center"
                   Access="Public" />
            <Label Name="StatusLabel"
                   Text=""
                   VerticalAlignment="Center"
                   Margin="0 0 10 0"
                   StyleClasses="LabelSubText" />

            <Control HorizontalExpand="True" />

            <RichTextLabel Name="CostLabel"
                           Text="[color=#fbbf24]0.00 c/s[/color]"
                           VerticalAlignment="Center"
                           Access="Public" />
        </BoxContainer>

        <Control MinHeight="10" />

        <!-- Middle line: Rate + Pressure -->
        <BoxContainer Orientation="Horizontal">
            <Label Text="{Loc 'gas-miner-rate-label'}"
                   VerticalAlignment="Center"
                   MinWidth="60" />
            <SpinBox Name="RateSpinBox"
                     Value="0"
                     HorizontalExpand="True"
                     MinWidth="80"
                     Access="Public" />
            <Label Text="mol/s"
                   VerticalAlignment="Center"
                   Margin="6 0 0 0" />

            <Control MinWidth="20" HorizontalExpand="True" />

            <Label Text="{Loc 'gas-miner-max-pressure-label'}"
                   VerticalAlignment="Center"
                   MinWidth="60" />
            <SpinBox Name="MaxPressureSpinBox"
                     Value="0"
                     HorizontalExpand="True"
                     MinWidth="80"
                     Access="Public" />
            <Label Text="kPa"
                   VerticalAlignment="Center"
                   Margin="6 0 0 0" />

            <Control MinWidth="20" HorizontalExpand="True" />

            <Button Name="ApplyButton"
                    Text="{Loc 'gas-miner-apply-button'}"
                    MinWidth="80"
                    HorizontalAlignment="Right"
                    Disabled="True"
                    Access="Public"
                    Margin="6 0 0 0" />
        </BoxContainer>

        <Control MinHeight="5" />

        <!-- Set button -->
    </BoxContainer>
</PanelContainer>
