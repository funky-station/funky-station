<BoxContainer xmlns="https://spacestation14.io"
              Orientation="Horizontal"
              HorizontalExpand="True"
              SeparationOverride="4">
    <EntityPrototypeView
        Name="ItemPrototype"
        Margin="4 0 0 0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        MinSize="32 32" />
    <Label Name="NameLabel"
           HorizontalExpand="True"
           VerticalExpand="True"
           ClipText="True"
           StyleClasses="font-condensed" />
    <Label Name="CountLabel"
           VerticalExpand="True"
           MinWidth="50"
           ClipText="True"
           StyleClasses="font-small"
           Text="0"
           Margin="0,0,4,0"
           Align="Right"/>
    <Button Name="ButtonLabel"
            MinWidth="60"
            VerticalExpand="True"
            Text="Vend"
            Margin="0,5,4,5"
            StyleClasses="ButtonSmall"/>
</BoxContainer>
