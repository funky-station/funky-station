<DefaultWindow xmlns="https://spacestation14.io"
               MinSize="270 420"
               SetSize="360 420"
               Title="{Loc 'gas-pipe-sensor-window-title'}">
    <BoxContainer Orientation="Vertical" Margin="5 5 5 5">
        <BoxContainer Name="CTopBox" Orientation="Horizontal"/>

        <!-- Only one content area - pipe data -->
        <ScrollContainer VerticalExpand="True">
            <BoxContainer Name="CPipeContent"
                          HorizontalExpand="True"
                          VerticalExpand="True"
                          Orientation="Vertical"
                          Margin="1 1 1 1"
                          MinSize="315 150"
                          Align="Center"/>
        </ScrollContainer>
    </BoxContainer>
</DefaultWindow>
